    "minimum-stability": "dev",
    "homepage":     "http://www.rohea.com",
    "license":      "MIT",
    "authors": [
        {
            "name": "Tomi Saarinen",
            "email": "tomi.saarinen@rohea.com"
        },
        {
            "name": "Rohea",
            "homepage": "http://www.rohea.com"
        }
    ],
    "require": {
        "php": ">=5.3.2"
    },
    "require-dev": {
        "phpspec/phpspec": "2.0.*"
